<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="reza.raul.rm.ActividadDePacientes.citasPacientes.RegistroCitas.RegistroCita">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:background="#F97E1C"
                android:src="@drawable/ic_perm_contact_calendar"
                android:padding="30dp" />

            <LinearLayout
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="25dp"
                >
                <EditText
                    android:id="@+id/registroCitaNombrePaciente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:hint="Paciente para la Cita"
                    android:inputType="textPersonName"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:background="@drawable/rounded_edittext_orange"
                    android:textColor="@color/cardview_light_background"
                    android:textColorHint="@color/cardview_light_background"/>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/selectFecha"
                        android:text="Fecha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_button"/>

                    <EditText
                        android:id="@+id/efecha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Click en Fecha"
                        android:textAlignment="center"
                        android:textColor="#F97E1C"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/selectHora"
                        android:text="Hora"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_button"/>

                    <EditText
                        android:id="@+id/ehora"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Click en Hora"
                        android:textAlignment="center"
                        android:textColor="#F97E1C"
                        android:textSize="20sp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/registroCitaDireccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounded_edittext_orange"
                    android:ems="10"
                    android:hint="Escribe la Direccion para la Cita"
                    android:inputType="textMultiLine|textPostalAddress"
                    android:maxLines="2"
                    android:maxLength="40"
                    android:padding="10dp"
                    android:textColor="@color/cardview_light_background"
                    android:textColorHint="@color/cardview_light_background" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="------------------------------------------------------"
                    android:textAlignment="center"/>
            </LinearLayout>

            <Button

                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="25dp"
                android:layout_gravity="center"
                android:id="@+id/selectRegistrar"
                android:text="Registrar Cita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"/>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>
